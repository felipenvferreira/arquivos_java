package principal;

import java.util.Random;

public class Program {

	public static void main(String[] args) {
		Random randon = new Random();
		
		int opcao = randon.nextInt (8) + 1;
		
		System.out.println(opcao);
				
		switch (opcao) {
		case 1:
			System.out.println("Domingo-feira");
			break;
		case 2:
			System.out.println("Segunda-feira");
			break;
		case 3:
			System.out.println("Terça-feira");
			break;
		case 4:
			System.out.println("Quarta-feira");
			break;
		case 5:
			System.out.println("Quinta-feira");
			break;
		case 6:
			System.out.println("Sexta-feira");
			break;
		case 7:
			System.out.println("Sábado");
			break;
			
		default:
			System.out.println("Não corresponde a um dia da semana");
			break;
		}
		
		/*if(opcao == "Sexta-feira") {
			System.out.println("Sextou!!!");
		}
		else if (opcao.equals("Quarta-feira")){
			System.out.println("O dia selecionado é quarta-feira");
		}
		else {
			System.out.println("Não corresponde a um dia da semana");
		}*/
	}

}
